<!--Body-->
<div class="row">
    <!--Filter Category-->
    <div class="col-md-2 grey-background">
      <h4>Filter:</h4>
      <div>
        <div class="checkbox">
          <label><input type="checkbox" value="">mobile</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="">cool</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="">stuff</label>
        </div>
        <div class="checkbox">
          <label><input type="checkbox" value="">example</label>
        </div>
      </div>
      <h4>Sort By:</h4>
      <div class="radio">
        <label><input type="radio" name="radio">Popularity</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="radio">Recent</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="radio">Relevance</label>
      </div>
    </div>
    <!--Post -->
    <div class="col-md-10">

      <h2>Posts</h2>
      <div style="border: grey 1px solid; border-radius: 5px;">

      </div>
      <div class="idea-list">
        {{#each ideas}}
        <div class="idea">
          <div class="idea-title">{{title}}</div>
          <a class="idea-author" href="#">{{author}}</a>
          <div class="idea-description">{{description}}<a href="#">more...</a></div>
          <div class="idea-details">
            <span class="idea-score">{{score}}</span>
            <span class="idea-vote">
              <i class="fa fa-2x fa-angle-up" aria-hidden="true"></i>
              <i class="fa fa-2x fa-angle-down" aria-hidden="true"></i>
            </span>
            <span class="idea-tags">Tags:
                {{#each tags}}
                <span class="idea-tag">{{this}}</span>
                {{/each}}
            </span>
          </div>
        </div>
        {{/each}}
        {{#unless ideas}}
        No ideas found :(
        {{/unless}}
      </div>
    </div>
  </div>
</div>
